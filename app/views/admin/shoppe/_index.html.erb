<iframe width="100%" height="500px" seamless="seamless" src="/shoppe" id="fullFrame"></iframe>
<script>
(function(){
	var resize = function() {
		var ifr = document.getElementById('fullFrame');

		if (ifr && ifr.contentWindow) {
			if (ifr.contentWindow.document.body) {
				$(ifr).css({height: Math.max(500,ifr.contentWindow.document.documentElement.scrollHeight)});
			}
			setTimeout(resize, 250);
		}

	};

	setTimeout(resize, 500);
})();
</script>
