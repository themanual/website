<% push_page_title "Issue #{@issue.number}"  %>

<% cache @issue do %>

  <header class="page-header">
    <h1>
      Issue <strong class="issue-number issue-<%= @issue.number %>"><%= @issue.number %></strong>
    </h1>
  </header>

  <ul class="l-issue l-line-t issue-<%= @issue.number %>">
    <% @issue.articles.ordered.each do |article| %>
    <li>
      <figure class="l-issue-illo">
        <%= illustration_tag @issue.number, article.author_slug, 'print' %>
      </figure>
      <div class="l-issue-text">

        <h2 class="piece-unit-author"><%= article.author.name %></h2>

        <div class="piece-unit-entry">
          <h3 class="piece-unit-title">
            <%= link_to article.title, piece_path(@issue.number, article.author_slug, :article)  %>
          </h3>
          <p class="piece-unit-synopsis is-short">
            <%= article.synopsis %>
          </p>
          <p class="piece-unit-metadata">
            <span class="piece-unit-topics">On <a href="#">Thing</a>, <a href="#">Other</a>, <a href="#">Another</a></span>
          </p>
        </div>

        <div class="piece-unit-entry">
          <h3 class="piece-unit-title">
            <%= link_to article.lesson.title, piece_path(@issue.number, article.author_slug, :lesson) %>
          </h3>
          <p class="piece-unit-synopsis is-short">
            <%= article.lesson.synopsis %>
          </p>
          <p class="piece-unit-metadata">
            <span class="piece-unit-topics">On <a href="#">Thing</a>, <a href="#">Other</a>, <a href="#">Another</a></span>
          </p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>

<% end %>