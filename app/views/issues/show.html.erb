<% content_for(:page_title){ "All Issues" } %>


  <main class="issue-<%= @issue %>">

    <section class="issue"><div class="wrapper">

      <header class="issue-header">
        <h1 class="issue-header-name">Issue <strong class="issue-header-name-number"><%= @issue %></strong></h1>
      </header>

      <!--
      <div class="issuebuy is-wide is-boxed">
        <h2 class="issuebuy-caption">
          <strong>Buy this issue. Support the manual.</strong> Or read for free below.
        </h2>
	      <%#= render 'issue_buy_options', sub: false %>
      </div>
      -->

      <ul class="issue-content g-row">
      <% ISSUES[:issue][@issue].each do |key, pair| %>
        <li class="issue_entry">
          <figure class="issue_entry-illo">
            <%= illustration_tag @issue, key, 'small' %>
          </figure>
          <div class="issue_entry-text">
            <h2 class="issue_entry-author"><%= pair[:author] %></h2>

            <ul class="issue_entry-pieces">
              <li class="issue_entry-piece is-article">
                <h3 class="issue_entry-piece-title"><a href="<%= piece_path @issue, key, :article %>"><%= pair[:article][:title] %></a></h3>
                <blockquote class="issue_entry-piece-synopsis">
                  <p><%= pair[:article][:synopsis] %></p>
                </blockquote>
              </li>
              <li class="issue_entry-piece is-lesson">
                <h3 class="issue_entry-piece-title"><a href="<%= piece_path @issue, key, :lesson %>">Lesson</a></h3>
                <blockquote class="issue_entry-piece-synopsis">
                  <p><%= pair[:lesson][:synopsis] %></p>
                </blockquote>
              </li>
            </ul>
          </div>
        </li>
      <% end %>
      </ul>
    </div></section>




    <aside class="boxes"><div>

      <section class="box g-half">
        <h2 class="box-title"><a class="issue-current" href="<%= issue_url(@issue) %>">Buy this issue</a> and support The Manual</h2>

        <div class="issuebuy">
          <figure class="issuebuy-figure">
            <%= image_tag "interface/devices-#{@issue}.png" %>
          </figure>
		      <%= render 'issue_buy_options', sub: false %>
        </div>
      </section>

      <section class="box g-half">
        <h2 class="box-title">Prints available at <a class="issue-current" href="/store">the Store</a></h2>
      </section>
    </div></aside>

  </main>