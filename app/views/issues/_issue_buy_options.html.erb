<ul class="issuebuy-options">
  <% if item = issue.shoppe_item(:digital) %>
  <li class="issuebuy-option">
    <div class="issuebuy-option-text">
      <h3 class="issuebuy-option-name">Digital</h3>
      <p  class="issuebuy-option-description">DRM-free Ebook</p>
    </div>
    <p  class="issuebuy-option-button">
      <%= buy_link item %>
    </p>
  </li>
  <% end %>

  <% if item = issue.shoppe_item %>
  <li class="issuebuy-option">
    <div class="issuebuy-option-text">
      <h3 class="issuebuy-option-name">Print + Digital</h3>
      <p  class="issuebuy-option-description">Hardback + DRM-Free Ebook</p>
    </div>
    <p class="issuebuy-option-button">
      <%= buy_link item %>
    </p>
  </li>
  <% end %>
  <% if sub %>
  <li class="issuebuy-option">
    <div class="issuebuy-option-text">
      <h3 class="issuebuy-option-name">Yearly Subscription</h3>
      <p  class="issuebuy-option-description">3 Issues per Year (Print + Digital)</p>
    </div>
    <p  class="issuebuy-option-button"><a href="#">$60</a></p>
  </li>
  <% end %>
</ul>