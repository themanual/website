<%= form_tag session_path(:user), method: :post, novalidate: :novalidate, class: 'form' do |f| %>
  <dl class="field">
    <dt><label>Email Address</label></dt>
    <dd>
      <%= email_field_tag :email, '', class: 'is-l', placeholder: 'yourname@domain.com', autofocus: true, required: true, id: 'supporter-signup-email' %>
    </dd>
  </dl>

  <div class="form-actions">
    <button type="submit" class="btn btn-sc">Send Login Link</button>
  </div>
<% end %>