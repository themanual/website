<div class="navgroup">
  <h2 class="navgroup-title">Browse</h2>
  <ul class="navgroup-items sidebar-browse">
    <li><%= link_to_current "Staff Picks", staffpicks_path %></li>
    <li class="soon"><span>Popular</span></li>
  </ul>

  <h2 class="navgroup-title">Issues</h2>
  <ul class="navgroup-items sidebar-issues">
    <%- latest_issue = Issue.latest -%>
    <%- if latest_issue.number == 4 && latest_issue.unpublished? && !current_user.can?(:view, latest_issue) -%>
    <li>
      <%= link_to_current nil, issue_path(issue: latest_issue.number), class: "issue-#{latest_issue.number}" do %>
        Issue <%= latest_issue.number %> <small class="tag">New</small>
      <% end %>
    </li>
    <%- end -%>
    <% current_user.visible_issues.each do |issue| %>
      <li>
        <%= link_to_current nil, issue_path(issue: issue.number), class: "issue-#{issue.number}" do %>
          Issue <%= issue.number %>
          <% if issue.new? %>
            <small class="tag">New</small>
          <% end %>
        <% end %>
      </li>
    <% end %>

  </ul>

  <h2 class="navgroup-title">Topics</h2>
  <ul class="navgroup-items sidebar-topics">
    <% Piece.active_topics.each do |topic| %>
      <li><%= link_to_current topic.titlecase, topic_path(topic: topic.downcase) %></li>
    <% end %>
  </ul>
</div>
