<%- track_link(".sidebar-topics a", "Clicked Sidebar Topic") -%>
<%- track_link(".sidebar-issues a", "Clicked Sidebar Issues") -%>

<div class="navgroup">
  <h2 class="navgroup-title">Browse</h2>
  <ul class="navgroup-items sidebar-browse">
    <li><%= link_to_current "Staff Picks", staffpicks_path %></li>
    <li class="soon"><span>Popular</span></li>
  </ul>

  <h2 class="navgroup-title">Issues</h2>
  <ul class="navgroup-items sidebar-issues">
    <% current_user.visible_issues.each do |issue| %>
      <li>
        <%= link_to_current nil, issue_path(issue.number), class: "issue-#{issue.number}" do %>
          Issue <%= issue.number %>
          <% if issue.new? %>
            <small class="tag">New</small>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <h2 class="navgroup-title">Topics</h2>
  <ul class="navgroup-items sidebar-topics">
    <% Piece.active_topics.collect(&:name).sort.each do |topic| %>
      <li><%= link_to_current topic.titlecase, topic_path(topic: topic.downcase) %></li>
    <% end %>
  </ul>
</div>