<nav class="navigation navigation--secondary"><div>
  <ul class="navigation__list">
      <li><%= link_to_current "All", issues_path %></li>
    <% current_user.visible_issues.each do |issue| %>
      <li>
        <%= link_to_current nil, issue_path(issue.number), class: "issue-#{issue.number}" do %>
          Issue <%= issue.number %>
          <% if issue.new? %>
            <small class="tag">New</small>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div></nav>