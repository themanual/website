<header class="site-header"><div class="l-grid">
  <h1>
    <%= link_to_current "The Manual", root_path %>
  </h1>
  <nav>
    <ul class="tabs">
      <li><%= link_to "Read",   read_path,  class: page_is_subpath_of('/read', 'current') %></li>
      <li><%= link_to "Shop",   shop_path,  class: page_is_subpath_of('/store', 'current') %></li>
      <li><%= link_to "About",  about_path, class: page_is_subpath_of('/about', 'current') %></li>
    </ul>
    <ul class="actions">
      <% if user_signed_in?  %>
      <li class="icon account has-popover">
        <%= link_to(current_user.first_name, account_path, data: {popover: 'trigger'}, class: page_is_subpath_of('/account', 'current')) %>
        <ul class="nav-popover is-right" data-popover="popover">
          <li><%= link_to("Account", account_path) %></li>
          <li><%= link_to("Log Out", destroy_user_session_path) %></li>
        </ul>
      </li>
      <% else %>
      <li class="subscribe">
        <%= link_to("Subscribe", shop_subscription_path) %>
      </li>
      <li class="login">
        <%= link_to_current("Log in", new_user_session_path) %>
      </li>
      <% end %>
      </li>
    </ul>
  </nav>
</div></header>