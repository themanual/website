<%- unless current_page?(root_path) %>
<aside class="site-announcement kickstarter"><div>
  <p>Help us continue making our web edition free.</p>
  <p><a href="<%= kickstarter_path %>" rel="external" class="button">Back our Kickstarter</a></p>
</div></aside>
<%- end %>
<header class="site-menu site-header"><div>
  <h1 class="site-header-home">
    <%= link_to_current "The Manual", root_path, class: "site-header-logo #{ content_for(:logo) }" %>
  </h1>
  <nav class="site-header-nav">
    <ul>
      <li><%= link_to "Read",   read_path,  class: page_is_subpath_of('/read', 'current') %></li>
      <li><%= link_to "Shop",   shop_path,  class: "external", rel: "external" %></li>
      <li><%= link_to "About",  about_path, class: page_is_subpath_of('/about', 'current') %></li>
    </ul>
  </nav>
</div></header>