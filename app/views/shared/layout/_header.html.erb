<header class="masthead <%= content_for(:site_header) %>">
  
  <%- if cookies[:hide_statement] != "1" %>
  <div class="masthead__statement l-block l-line-b"><p><strong>The Manual</strong> is a design journal for the web, with thrice-yearly issues in print, ebook, audiobook, and online. <button class="masthead__statement__close btn btn-ghost btn-sc btn-small" href="#">Hide</button></p></div>
  <%- end -%>

  <section class="masthead__header l-x"><div class="l-wrap">
    
    <%= link_to root_path, { class: "masthead__logo" } do -%>
      <%= inline_svg "identity/logo-text.svg" %>
    <%- end -%>
    
    <nav class="masthead__nav">
      <ul class="masthead__nav__list">
        <li><%= link_to "Read",          read_path, class: page_is_subpath_of('/read', 'current') %></li>
        <li><%= link_to_current "Buy",   shop_path, rel: "external" %></li>
        <li><%= link_to_current "About", about_path, class: page_is_subpath_of('/about', 'current') %></li>
        <li><%= link_to_current "Blog",  blog_path, rel: "external" %></li>
      </ul>
    </nav>

  </div></section>

