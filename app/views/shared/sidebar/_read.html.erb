<div class="navgroup">
  <h2 class="navgroup-title">Featured</h2>
  <ul class="navgroup-items sidebar-issues">
    <li><%= link_to_current "Staff Picks", read_path %></li>
    <li class="soon"><span>Popular</span></li>
  </ul>
</div>

<div class="navgroup">
  <h2 class="navgroup-title">Issues</h2>
  <ul class="navgroup-items sidebar-issues">
    <!-- <li><strong><%= link_to_current "All Issues", issues_path %></strong></li> -->
    <% current_user.visible_issues.each do |issue| %>
      <li>
        <%= link_to_current nil, issue_path(issue.number), class: "issue-#{issue.number}" do %>
          Issue <%= issue.number %>
          <% if issue.new? %>
            <small class="tag">New</small>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="navgroup">
  <h2 class="navgroup-title">Topics</h2>
  <ul class="navgroup-items sidebar-topics">
    <!-- <li><strong><%= link_to_current "All Topics", topics_path %></strong></li> -->
    <% Piece.active_topics.collect(&:name).sort.each do |topic| %>
      <li><%= link_to_current topic.titlecase, topic_path(topic.downcase) %></li>
    <% end %>
  </ul>
</div>