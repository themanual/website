<div class="navgroup">
  <h2 class="navgroup-title">Home</h2>
  <h2 class="navgroup-title">Shop</h2>
  
  <h2 class="navgroup-title spaced">Issues</h2>
  <ul class="navgroup-items sidebar-issues">
    <% current_user.visible_issues.each do |issue| %>
      <li>
        <%= link_to_current nil, issue_path(issue.number), class: "issue-#{issue.number}" do %>
          Issue <%= issue.number %>
          <% if issue.new? %>
            <small class="tag">New</small>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <h2 class="navgroup-title">Authors</h2>
  
  <h2 class="navgroup-title">Topics</h2>
  <ul class="navgroup-items sidebar-topics">
    <% Piece.active_topics.collect(&:name).sort.each do |topic| %>
      <li><%= link_to_current topic.titlecase, topic_path(topic.downcase) %></li>
    <% end %>
  </ul>

  <h2 class="navgroup-title spaced">About</h2>
  <ul class="navgroup-items">
    <li><%= link_to_current "About Us", {controller: 'about', action: 'index'} %></li>
    <li><%= link_to_current "History",  {controller: 'about', action: 'history'} %></li>
    <li><%= link_to_current "Team",     {controller: 'about', action: 'team'} %></li>
  </ul>


</div>