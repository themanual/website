<% push_page_title "Collections" %>
<% push_page_title "Store" %>

<main>
  <header class="l-pad-x-yy bg-gray"><div class="l-container text">
    <h1>Store</h1>
  </div></header>

  <nav class="l-pad-x l-divider bg-gray"><div class="sub-nav l-container">
    <ul class="sub-nav-list">
      <li><%= link_to "Featured",       {:action => 'featured'} %></li>
      <li><%= link_to "Subscriptions",  {:action => 'subscriptions' } %></li>
      <li><%= link_to "Collections",    {:action => 'collections' }, :class => 'is-current' %></li>
      <li><%= link_to "Issues",         {:action => 'issues' } %></li>
      <li><%= link_to "Goods",          {:action => 'goods' } %></li>
    </ul>
  </div></nav>

  <section class="products l-wrapper l-pad-yy">
    <div class="product l-row">
      <div class="product-shot l-col-two-thirds">
        <figure>
          <%= image_tag 'http://placehold.it/900x450' %>
        </figure>
        <p><a href="#">More photos</a> <span class="middot">&middot;</span> <a href="#">Ebook sample</a></p>
      </div>
      <div class="l-col-third">
        <h3 class="product-name">Full Library</h3>
        <div class="product-description">
          <p>The perfect introduction to The Manual for new readers, all of our Issues (1&ndash;4) at <span class="highlight">20% off.</span></p>
        </div>
        <div class="product-buy">
          <div class="buy">
            <div class="buy-item">
              <div class="buy-item-text">
                <h4 class="buy-item-name">Print &amp; Ebook</h4>
              </div>
              <div class="buy-item-action">
                <a class="buy-item-button" href="#">
                  <%= inline_svg 'ui/icon-plus.svg' %>
                  <span class="currency">$</span><span class="value">80</span>
                </a>
              </div>
            </div>
            <div class="buy-item">
              <div class="buy-item-text">
                <h4 class="buy-item-name">Ebook</h4>
              </div>
              <div class="buy-item-action">
                <a class="buy-item-button" href="#">
                  <%= inline_svg 'ui/icon-plus.svg' %>
                  <span class="currency">$</span><span class="value">30</span>
                </a>
              </div>
            </div>
            <div class="buy-item">
              <div class="buy-item-text">
                <h4 class="buy-item-name">Audiobook</h4>
              </div>
              <div class="buy-item-action">
                <a class="buy-item-button" href="#">
                  <%= inline_svg 'ui/icon-plus.svg' %>
                  <span class="currency">$</span><span class="value">30</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="product l-row l-pad-tt">
      <div class="product-shot l-col-two-thirds">
        <figure>
          <%= image_tag 'http://placehold.it/900x450' %>
        </figure>
        <p><a href="#">More photos</a> <span class="middot">&middot;</span> <a href="#">Ebook sample</a></p>
      </div>
      <div class="l-col-third">
        <h3 class="product-name">Volume I </h3>
        <div class="product-description">
          <p>The first year of The Manual, with Issues 1–3 in Ebook &amp; Print, in a gorgeous limited-edition engraved plywood case. A collector’s item and a great gift for any designer.</p>
        </div>
        <div class="product-buy">
          <div class="buy">
            <div class="buy-item">
              <div class="buy-item-text">
                <h4 class="buy-item-name">Print &amp; Ebook</h4>
              </div>
              <div class="buy-item-action">
                <a class="buy-item-button" href="#">
                  <%= inline_svg 'ui/icon-plus.svg' %>
                  <span class="currency">$</span><span class="value">100</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>