<%- @breadcrumb = true -%>
<%- title "Account" -%>
<%- title "Update" -%>
<section class="l-p">
  <%= form_for current_user, url: account_path, html: { class: "form l-single-l", novalidate: :novalidate, method: :patch } do |a| %>
  <!--
  <p class="alert alert-error">
    <strong>Uh-oh!</strong> We couldnâ€™t save your address. Please fix any errors and try again.
  </p>
  -->


  <div class="l-row l-cols-halves">
    <dl class="field">
      <dt><%= a.label :first_name %></dt>
      <dd><%= a.text_field :first_name, required: true, class: 'is-long' %></dd>
    </dl>

    <dl class="field">
      <dt><%= a.label :last_name %></dt>
      <dd><%= a.text_field :last_name, class: 'is-long', class: 'is-long' %></dd>
    </dl>
  </div>

  <dl class="field">
    <dt><%= a.label :email %></dt>
    <dd><%= a.text_field :email, required: true, disabled: true, class: 'is-long' %></dd>
  </dl>

  <div class="form-actions">
    <p>
      <button type="submit" class="btn btn-large" data-disable-with="Updating...">Update</button> or <%= link_to "go back to Account", account_path %>
    </p>
  </div>
  <% end %>
</section>
