<head>
  <%= render partial: "shared/layout/head" %>
  <%= stylesheet_link_tag :application, :debug => Rails.env.development? %>
</head>
<body lang="en" class="preload bg-white">

  <%= render partial: "shared/layout/header" %>

  <% if %w(read store about).include?(page_namespace) %>
   <div id="content">
     <div class="l-wrapper-grid">
       <%= render partial: "shared/nav/#{page_namespace}" %>
       <main>
         <%= yield %>
       </main>
     </div>
   </div>
  <% else %>
  <main id="content l-wrapper">
    <%= yield %>
  </main>
  <% end %>

  <%= render partial: "shared/layout/footer" %>

  <%= javascript_include_tag :application, :debug => Rails.env.development? %>
  <%= yield :footer %>
</body>
</html>