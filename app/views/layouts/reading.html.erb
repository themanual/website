<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%= csrf_meta_tags %>

  <%# Title and Meta %>
  <title><%= @page_title.join(' · ') + ' · ' if @page_title.any? %>The Manual</title>
  <%= yield(:meta) %>

  <%# JS %>
  <script>(function(H){H.className=H.className.replace(/\bno-js\b/,'js')})(document.documentElement)</script>
  <!--[if lt IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"></script><![endif]-->

  <script type="text/javascript" src="//use.typekit.net/zve6rgt.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%# CSS %>
  <%= stylesheet_link_tag :application, :debug => Rails.env.development? %>

</head>
<body lang="en" class="preload bg-white">

  <header class="site-header"><div class="l-grid">
    <h1><a href="<%= root_url %>">The Manual</a></h1>
    <nav>
      <ul class="inline-list">
        <li><%= link_to "Read", issues_path, class: "current" %></li>
        <li><%= link_to "Shop", store_path %></li>
        <li><a href="#">About</a></li>
        <!--
        <li><%= link_to "Cart",   cart_path, id: 'cart-label', data: { :'open-popover' => 'cart' }  %></li>
        -->
        <li class="l-fl-r"><%= user_signed_in? ? link_to("Log out", destroy_user_session_path) : link_to("Log in", new_user_session_path) %></li>
      </ul>
    </nav>
  </div></header>

  <div id="content">
    <div class="l-wrapper-grid l-p-menu">
      <nav id="sectionnav">
        <h2 class="navgroup-title">Browse</h2>
        <ul class="navgroup-items">
          <li><a href="#">Staff Picks</a></li>
          <li><a href="#">Recent</a></li>
          <li><a href="#">Popular</a></li>
        </ul>

        <h2 class="navgroup-title">Sections</h2>
        <ul class="navgroup-items">
          <li>
            <%= nav_link_to "Issues", issues_path %>
            <ul>
              <li><%= nav_link_to "Issue 3", issue_path(issue: 3) %></li>
              <li><%= nav_link_to "Issue 2", issue_path(issue: 2) %></li>
              <li><%= nav_link_to "Issue 1", issue_path(issue: 1) %></li>
            </ul>
          </li>
          <li><a href="#">Blog</a></li>
        </ul>

        <h2 class="navgroup-title">Topics</h2>
        <ul class="navgroup-items">
          <li><a href="#">Business</a></li>
          <li><a href="#">Community</a></li>
          <li><a href="#">Content</a></li>
          <li><a href="#">Creativity</a></li>
          <li><a href="#">Culture</a></li>
          <li><a href="#">Growth</a></li>
          <li><a href="#">Industry</a></li>
          <li><a href="#">Layout</a></li>
          <li><a href="#">Learning</a></li>
          <li><a href="#">Teamwork</a></li>
          <li><a href="#">Typography</a></li>
          <li><a href="#">Writing</a></li>
        </ul>
      </nav>
      <main>
        <%= yield %>
      </main>
    </div>
  </div>

  <%= javascript_include_tag :application, :debug => Rails.env.development? %>
  <%= yield :footer %>
</body>
</html>